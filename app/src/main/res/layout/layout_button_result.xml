<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_marginTop_button"
        android:gravity="center"
        android:paddingHorizontal="@dimen/all_paddingHorizontal_button">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/all_height_button">

            <Button
                android:id="@+id/btn_result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_btn_result"
                android:text="@string/see_result"
                android:textColor="@color/textColorTitle"
                android:textSize="@dimen/all_textSize_title_spinner"/>

        </com.balysv.materialripple.MaterialRippleLayout>

    </LinearLayout>

</LinearLayout>