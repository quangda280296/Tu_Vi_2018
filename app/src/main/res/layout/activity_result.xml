<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main"
    tools:context="tuvi2018.tuvitrondoi.vmb.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        tools:ignore="WebViewLayout">

        <include layout="@layout/layout_action_bar"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/result_marginHorizontal_background"
                android:layout_marginVertical="@dimen/result_marginVertical_background"
                android:alpha="0.4"
                android:background="@drawable/background_webview"/>

            <WebView
                android:id="@+id/webkit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/result_marginHorizontal_text_box"
                android:layout_marginVertical="@dimen/result_marginVertical_text_box"/>

        </FrameLayout>

    </LinearLayout>

    <include layout="@layout/layout_adview"/>

</FrameLayout>


