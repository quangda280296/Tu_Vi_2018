<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main"
    android:orientation="vertical"
    tools:context="tuvi2018.tuvitrondoi.vmb.BoiEgyptActivity">

    <include layout="@layout/layout_action_bar"/>

    <TextView
        android:id="@+id/txt_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/all_marginHorizontal_title"
        android:layout_marginVertical="@dimen/all_marginVertical_title"
        android:gravity="center"
        android:text="@string/boi_Egypt_title_"
        android:textColor="@color/textColorTitle"
        android:textSize="@dimen/all_textSize_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_spacing_spinner"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_height_spinner"
        android:background="@mipmap/bg_box">

        <EditText
            android:id="@+id/txt_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/all_marginLeft_title_spinner"
            android:layout_marginRight="@dimen/all_marginRight_arrow_spinner"
            android:background="@color/transparent"
            android:hint="@string/all_name"
            android:singleLine="true"
            android:textColorHint="@color/textColor"
            android:textSize="@dimen/all_textSize_title_spinner"/>

    </FrameLayout>

    <include layout="@layout/layout_button_result"/>

    <include layout="@layout/layout_adview"/>

</LinearLayout>
